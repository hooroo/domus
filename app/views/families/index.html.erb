<%= render "sub_header" %>
<div id="active_families">
  <p class="title"><%= t("families.index.buttons.active") %></p>
  <%= link_to t("families.index.buttons.active"), new_family_path, class: "link_button, button" %>
  <table>
    <%= render "families_table_header" %>
    <%= render @active_families %>
  </table>
</div>

<div id="inactive_families">
  <p class="title"><%= t("families.index.buttons.inactive") %></p>
  <table>
    <%= render "families_table_header" %>
    <%= render @inactive_families %>
  </table>
</div>

<div id="all_families">
  <p class="title"><%= t("families.index.buttons.all") %></p>
  <table>
    <%= render "families_table_header" %>
    <%= render @families %>
  </table>
</div>
